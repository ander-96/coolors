<%# app/views/layouts/_header.erb %>

<header class="header">
	<%= link_to(image_tag("path/to/image.png"), root_path) %>		
</header>

<div class="submenu">
	<nav>
		<p class="instruction">Click on the drop to copy the Coolor!</p>
		<% if user_signed_in? %>
		<%= link_to "Sign Out", destroy_user_session_path, method: :delete, :class => "button signout" %>
			<% if current_user.id === 2 %>
				<span class="button admin-advice"><i class="icon ion-gear-a"></i>Admin Logged!</span>		
			<% end %>
		<% end %>
		<%= link_to new_color_path, :class => "button" do %>
			<i class="icon ion-plus-circled"></i>
			New Coolors
		<% end %>
	</nav>
</div>